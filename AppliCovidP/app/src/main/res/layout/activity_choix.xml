<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/b5"
    android:adjustViewBounds="true"
    tools:context="controleur.ChoixActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quel est votre choix?"
        android:textSize="30dp"
        android:textColor="#FFFFFF"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textStyle="bold|italic"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="381dp"
        android:layout_height="186dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/i1" />

    <Button
        android:id="@+id/test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#C1F2F8"
        android:text="Faire Test"
        android:textColor="#FFFFFF"
        android:textSize="24dp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/res"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#C1F2F8"
        android:text="Resultat Hebdo COVID"
        android:textColor="#FFFFFF"
        android:textSize="24dp"
        android:textStyle="bold|italic" />




</LinearLayout>